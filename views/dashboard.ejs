<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SB-SMS</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
    <script src="/js/index.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito+Sans:300i,400,700&amp;display=swap"
      rel="stylesheet"
    />
    <!-- <link rel="stylesheet" href="/css/sortable.min.css" />
    <script src="/js/sortable.min.js"></script> -->
    <script>
      function searchTable() {
        let input = document.getElementById("searchInput")
        let toSearch = input.value.toLowerCase()
        let tableElement = document.querySelector("table")
        let trElements = tableElement.getElementsByTagName("tr")

        for (let i = 1; i < trElements.length; i++) {
          let toHide = false
          let tdElements = trElements[i].getElementsByTagName("td")

          for (let j = 1; j < tdElements.length; j++) {
            if (tdElements[j]) {
              let txtValue =
                tdElements[j].textContent || tdElements[j].innerText

              if (txtValue.toLowerCase().includes(toSearch)) {
                toHide = true
                break
              }
            }
          }

          if (toHide) {
            trElements[i].style.display = ""
          } else {
            trElements[i].style.display = "none"
          }
        }
      }
      function resetTable() {
        let input = document.getElementById("searchInput")
        input.value = ""

        let tableElement = document.querySelector("table")
        let trElements = tableElement.getElementsByTagName("tr")

        for (let i = 1; i < trElements.length; i++) {
          trElements[i].style.display = ""
        }
      }
      async function deleteUser(userId) {
        const confirmed = confirm(
          "Are you sure you want to delete this Student?"
        )
        const loader = document.getElementById("pre-loader")
        if (confirmed) {
          loader.style.display = "block"
          main.classList.add("blur")

          try {
            const response = await fetch(`/dashboard/delete/${userId}`, {
              method: "PATCH",
            })
            if (response.ok) {
              window.location.reload()
            }
          } catch (error) {}
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        const loader = document.getElementById("pre-loader")
        const main = document.getElementById("main")
        const overlay = document.getElementById("overlay")

        window.addEventListener("beforeunload", () => {
          overlay.style.display = "block"

          loader.style.display = "block"
          main.classList.add("blur")
        })

        window.addEventListener("load", () => {
          loader.style.display = "none"
          main.classList.remove("blur")
          overlay.style.display = "none"
        })

        const tableRows = document.querySelectorAll("tbody tr")
        const tableHeads = document.querySelectorAll("thead th")
        const columnsToSort = [0, 2, 3]

        tableHeads.forEach((head, i) => {
          if (columnsToSort.includes(i)) {
            let sortAsc = true
            head.onclick = () => {
              tableHeads.forEach(head => head.classList.remove("active"))
              head.classList.add("active")

              head.classList.toggle("asc", sortAsc)
              sortAsc = head.classList.contains("asc") ? false : true

              sortTable(i, sortAsc)
            }
          }
        })

        function sortTable(column, sortAsc) {
          const soretedRows = [...tableRows]
            .sort((a, b) => {
              let firstRow = a
                  .querySelectorAll("td")
                  [column].textContent.toLowerCase(),
                secondRow = b
                  .querySelectorAll("td")
                  [column].textContent.toLowerCase()

              if (column === 0) {
                firstRow = parseInt(firstRow, 10)
                secondRow = parseInt(secondRow, 10)
              }

              return sortAsc
                ? firstRow < secondRow
                  ? 1
                  : -1
                : firstRow < secondRow
                ? -1
                : 1
            })
            .map(sortedRow =>
              document.querySelector("tbody").appendChild(sortedRow)
            )
        }
      })
    </script>
  </head>
  <body>
    <%- include('include/_navbar.ejs') %>
    <div
      id="pre-loader"
      class="absolute hidden top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50"
    >
      <div class="lds-spinner">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>

    <div id="main" class="mx-10">
      <div class="px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center mt-16">
          <div class="flex justify-start items-between">
            <div class="item1">
              <div class="flex justify-start my-autop-4">
                <div class="relative mt-">
                  <div
                    class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                  >
                    <svg
                      class="w-5 h-5 text-gray-500 dark:text-gray-400"
                      fill="currentColor"
                      viewbox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                        clip-rule="evenodd"
                      ></path>
                    </svg>
                  </div>
                  <input
                    type="text"
                    id="searchInput"
                    onkeyup="searchTable()"
                    class="bg-gray-50 border rounded-3xl border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-80 pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Search..."
                  />
                </div>
                <button
                  onclick="resetTable()"
                  class="mt-1 h-8 w-16 rounded-3xl font-semibold text-white bg-indigo-600 ml-3"
                >
                  Clear
                </button>
              </div>
            </div>
          </div>
          <div class="add flex justify-end ml-auto mr-10">
            <div class="mt-4 sm:ml-16 sm:mt-0 my-auto">
              <a
                href="/dashboard/create"
                class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
              >
                Add Student
              </a>
            </div>
          </div>
        </div>

        <div class="mt-8 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div
              class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8"
            >
              <table class="min-w-full divide-y divide-gray-300 sortable">
                <thead>
                  <tr>
                    <th
                      scope="col"
                      class="cursor-pointer py-3.5 pl-4 pr-3 text-center text-sm font-semibold text-gray-900 sm:pl-0"
                    >
                      ID &nbsp;<i class="fa-solid fa-sort"></i>
                    </th>
                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-center text-sm font-semibold text-gray-900"
                    >
                      IMAGE
                    </th>
                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-center text-sm font-semibold text-gray-900"
                    >
                      FIRSTNAME &nbsp;<i class="fa-solid fa-sort"></i>
                    </th>
                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-center text-sm font-semibold text-gray-900"
                    >
                      LASTNAME &nbsp;<i class="fa-solid fa-sort"></i>
                    </th>
                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-center text-sm font-semibold text-gray-900"
                    >
                      BIRTHDATE
                    </th>
                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-center text-sm font-semibold text-gray-900"
                    >
                      CONTACT
                    </th>
                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-center text-sm font-semibold text-gray-900"
                    >
                      ADDRESS
                    </th>

                    <th
                      scope="col"
                      class="cursor-pointer px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      ACTION
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <%for (let i=0; i < students.length; i++){ %>
                  <tr>
                    <td
                      class="whitespace-nowrap text-center py-5 pl-4 pr-3 text-sm sm:pl-0"
                    >
                      <div class="text-gray-900">
                        <span
                          class="inline-flex text-center items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"
                          ><%= students[i].studentId %></span
                        >
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="h-11 w-11 flex-shrink-0 mx-auto">
                        <% if (students[i].imageurl) { %>
                        <img
                          src="<%=
                        students[i].imageurl.replace(students[i].firstname,'thumb'+ students[i].firstname) %>"
                          width="40"
                          class="rounded-full"
                        />
                        <% } else { %>
                        <img src="/img/null.png" width="40" class="mx-auto" />
                        <% } %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap text-center px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].firstname %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap text-center px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].lastname %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap text-center px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].birthdate.split('-').reverse().join('-')
                        %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap text-center py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].contact %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap text-center py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].address %>
                      </div>
                    </td>
                    <td
                      class="relative whitespace-nowrap py-5 pr-4 ml-8 text-left text-sm font-medium sm:pr-0 space-x-4"
                    >
                      <a
                        href="/dashboard/update/<%= students[i].studentId %>"
                        class="text-indigo-600 hover:text-indigo-900"
                        >Edit</a
                      >
                      <button
                        onclick="deleteUser('<%= students[i].studentId %>')"
                        class="text-indigo-600 hover:text-indigo-900"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                  <%} %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
