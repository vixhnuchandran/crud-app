<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SB-SMS</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
    <script src="/js/index.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
    href="https://fonts.googleapis.com/css?family=Nunito+Sans:300i,400,700&amp;display=swap"
    rel="stylesheet""stylesheet" />
    <script>
      function deleteUser(userId) {
        const confirmed = confirm(
          "Are you sure you want to delete this Student?"
        )

        if (confirmed) {
          try {
            fetch(`/dashboard/delete/${userId}`, {
              method: "PATCH",
            }).then(() => {
              location.reload()
            })
          } catch (error) {
            console.error("Error deleting user:", error)
          }
        }
      }

      function resetTable() {
        let input = document.getElementById("searchInput")
        input.value = ""

        let tableElement = document.querySelector("table")
        let trElements = tableElement.getElementsByTagName("tr")

        for (let i = 1; i < trElements.length; i++) {
          trElements[i].style.display = ""
        }
      }

      function searchTable() {
        let input = document.getElementById("searchInput")
        let toSearch = input.value.toLowerCase()
        let tableElement = document.querySelector("table")
        let trElements = tableElement.getElementsByTagName("tr")

        for (let i = 1; i < trElements.length; i++) {
          let toHide = false
          let tdElements = trElements[i].getElementsByTagName("td")

          for (let j = 1; j < tdElements.length; j++) {
            if (tdElements[j]) {
              let txtValue =
                tdElements[j].textContent || tdElements[j].innerText

              if (txtValue.toLowerCase().includes(toSearch)) {
                toHide = true
                break
              }
            }
          }

          if (toHide) {
            trElements[i].style.display = ""
          } else {
            trElements[i].style.display = "none"
          }
        }
      }
    </script>
  </head>
  <body>
    <%- include('include/_navbar.ejs') %>

    <div id="main" class="mx-10">
      <div class="px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center">
          <div class="sm:flex-start mt-10">
            <h1 class="text-base mt-5 font-semibold leading-6 text-gray-900">
              Higher Secondary
            </h1>
            <p class="mt-2 text-sm text-gray-700">
              Commerce Computer , batch 2023-24
            </p>
          </div>
          <div class="flex justify-start items-start mx-9">
            <div class="item1">
              <div class="ml-6 flex justify-start p-4">
                <div class="relative mt-1">
                  <div
                    class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                  >
                    <svg
                      class="w-5 h-5 text-gray-500 dark:text-gray-400"
                      fill="currentColor"
                      viewbox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                        clip-rule="evenodd"
                      ></path>
                    </svg>
                  </div>
                  <input
                    type="text"
                    id="searchInput"
                    onkeyup="searchTable()"
                    class="bg-gray-50 border rounded-3xl border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-80 pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Search..."
                  />
                </div>
                <button
                  onclick="resetTable()"
                  class="mt-2 h-8 w-16 rounded-3xl font-semibold text-white bg-indigo-600 ml-3"
                >
                  Clear
                </button>
              </div>
            </div>
          </div>
          <div class="add flex justify-end ml-auto mr-10">
            <div class="mt-4 sm:ml-16 sm:mt-0">
              <a
                href="/dashboard/create"
                class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
              >
                Add Student
              </a>
            </div>
          </div>
        </div>

        <div class="mt-8 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div
              class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8"
            >
              <table class="min-w-full divide-y divide-gray-300">
                <thead>
                  <tr>
                    <th
                      scope="col"
                      class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0"
                    >
                      ID
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      IMAGE
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      FIRSTNAME
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      LASTNAME
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      BIRTHDATE
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      CONTACT
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      ADDRESS
                    </th>
                    <th
                      scope="col"
                      class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                    >
                      ACTION
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <%for (let i=0; i < students.length; i++){ %>
                  <tr>
                    <td
                      class="whitespace-nowrap py-5 pl-4 pr-3 text-sm sm:pl-0"
                    >
                      <div class="text-gray-900">
                        <span
                          class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"
                          ><%= students[i].studentId %></span
                        >
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="h-11 w-11 flex-shrink-0">
                        <% if (students[i].imageurl) { %>
                        <img
                          src="<%= students[i].imageurl %>"
                          width="40"
                          class="rounded-full"
                        />
                        <% } else { %>
                        <img src="/img/null.png" width="40" class="mx-auto" />
                        <% } %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].firstname %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].lastname %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].birthdate %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].contact %>
                      </div>
                    </td>
                    <td
                      class="whitespace-nowrap px-3 py-5 text-sm text-gray-500"
                    >
                      <div class="text-gray-900">
                        <%= students[i].address %>
                      </div>
                    </td>
                    <td
                      class="relative whitespace-nowrap py-5 pl-3 pr-4 text-left text-sm font-medium sm:pr-0 space-x-4"
                    >
                      <a
                        href="/dashboard/update/<%= students[i].studentId %>"
                        class="text-indigo-600 hover:text-indigo-900"
                        >Edit</a
                      >
                      <button
                        onclick="deleteUser('<%= students[i].studentId %>')"
                        class="text-indigo-600 hover:text-indigo-900"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                  <%} %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
